close all
%Load File
carseq = load('../data/carseq.mat');
 rects(1,1:4)=[60,117,146,152];
 rects2(1,1:4)=[60,117,146,152];
%  rects(1,1:4)= [122, 59, 169, 104];
[x,y]=meshgrid(1:size(carseq.frames(:,:,1),2),1:size(carseq.frames(:,:,1),1)); 
Itbase=carseq.frames(:,:,1);

figure(2)
hold on
for i=1:size(carseq.frames,3)-1
% rect=rectangle('position', [rect(1), rect(2), rect(3)-rect(1), rect(4)-rect(2)]);

% rectangle('position', [rect(1), rect(2), rect(3)-rect(1), rect(4)-rect(2)], 'EdgeColor', 'g');
It=carseq.frames(:,:,i);

im = insertShape(It,'rectangle', [rects(i,1),rects(i,2), rects(i,3)-rects(i,1),rects(i,4)-rects(i,2)], 'LineWidth', 3);
im = insertShape(im,'rectangle', [rects2(i,1),rects2(i,2), rects2(i,3)-rects2(i,1),rects2(i,4)-rects2(i,2)], 'LineWidth', 3);
imshow(im);
% if(i==1 || i==100|| i==200 || i==300 || i==400)
% imnum= i;
% imname=strcat('../results/frame', i, '.jpg');
% imwrite(im, imname, 'jpg');
% end
It1=carseq.frames(:,:,i+1);
[u,v] = LucasKanade(It, It1, rects(i,1:4));
[ustar,vstar]=LucasKanade(Itbase, It1, rects2(i,1:4));
rects(i+1,1:4)=rects(i,1:4) +round([u,v,u,v]);
% It=im2double(It);
% It1=im2double(It1);
% It1new = interp2(It1, x+(u*ones(size(x,1),size(x,2))), y+(v*ones(size(y,1),size(y,2))));
% 
% [unew,vnew]= LucasKanade(It1new, It, rects2(i,1:4));

if(norm([unew-u;vnew-v]) <=1)
    rects2(i+1,1:4)=  rects2(i,1:4);
else
    rects2(i+1,1:4) = rects2(i,1:4) + round([u,v,u,v]);
end
end

save('../results/carseqrects-wcrt.mat', 'rects2'); 
hold off
